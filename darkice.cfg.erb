# save as `darkice.cfg` and run with
#
#   sudo darkice -c darkice.cfg
#
[general]
duration = 0
bufferSecs = 5
reconnect = yes

[input]
device = <%= device %>
sampleRate = 44100
bitsPerSample = 16
channel = 1

[icecast2-0]
format = vorbis
bitrateMode = vbr
quality = 0.5
server = <%= public_ip_address %>
# darkice does not support https
port = <%= port %>
password = <%= source_password %>
mountPoint = <%= mount_point %>
