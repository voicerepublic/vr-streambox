[Unit]
Description=Liquidsoap on tty3
Requires=sound.target
After=sound.target

[Service]
PermissionsStartOnly=true
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi
ExecStart=/usr/local/bin/liquidsoap -v streamboxx.liq
StandardInput=tty
StandardOutput=tty
TTYPath=/dev/tty3
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target